{
    "manifest_version": 2,
    "name": "Newslytical",
    "description": "Get a smart analysis of a Tweet in the form of a trust report.  Decide what you should or shouldn't believe.",
    "version": "1.2.10",
    "icons": {
      "16": "img/icon_16x16.png",
      "48": "img/icon_48x48.png",
      "128": "img/icon_128x128.png"
    },
    "browser_action": {
      "default_icon": {
        "19": "img/icon_19x19.png",
        "38": "img/icon_38x38.png"
      },
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "permissions": ["storage", "topSites", "contextMenus", "tabs"]
  }